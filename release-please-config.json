{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "draft": false,
  "prerelease": false,
  "packages": {
    "flipt-engine": {
      "component": "flipt-engine",
      "release-type": "rust"
    },
    "flipt-client-go": {
      "component": "flipt-client-go",
      "release-type": "go",
      "skip-github-release": true
    },
    "flipt-client-node": {
      "component": "flipt-client-node",
      "release-type": "node",
      "skip-github-release": true
    },
    "flipt-client-python": {
      "component": "flipt-client-python",
      "release-type": "python",
      "skip-github-release": true
    },
    "flipt-client-ruby": {
      "component": "flipt-client-ruby",
      "release-type": "ruby",
      "version-file": "lib/flipt_client/version.rb",
      "skip-github-release": true
    }
  }
}
